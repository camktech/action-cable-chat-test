<h1>Login</h1>
<%= form_tag('/login', method: 'post') do %>
  <%= label_tag(:name, 'Name: ') %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:password, 'Password: ') %>
  <%= password_field_tag(:password) %>
  <div>
    <%= submit_tag('Login') %>
  </div>

  <h3>New User?</h3>
  <%= link_to('Sign Up', new_user_path) %>

<% end %>
